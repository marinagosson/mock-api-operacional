        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "description": "Enviar o access_token",
            "schema": {
              "type": "string",
              "example": "a9s87da87sd89a7sd7a89s7da89s7d0897as89da0s987"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
