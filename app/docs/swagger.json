      }
    },
    "/loja/{id}/inventario": {
      "get": {
        "tags": [
          "Loja"
        ],
        "summary": "Retorna todos os inventarios filtrando pela loja",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "description": "Enviar o access_token",
            "schema": {
              "type": "string",
              "example": "a9s87da87sd89a7sd7a89s7da89s7d0897as89da0s987"
            }
          },
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LojaModel"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/produto": {
      "get": {
        "tags": [
          "Produto"
        ],
        "summary": "Retorna todos os produtos cadastrados nas lojas",
        "operationId": "produto",
        "parameters": [
          {
            "in": "header",
