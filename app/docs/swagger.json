  "paths": {
    "/ativacao": {
      "post": {
        "tags": [
          "Ativação"
        ],
        "summary": "Ativar o App",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AtivacaoModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponseModel"
                },
                "example": {
                  "message": "Dispositivo ativado com sucesso"
                }
              }
            }
          }
        }
      }
    },
    "/auth": {
      "post": {
        "tags": [
          "Autenticação"
        ],
        "summary": "Iniciar uma sessão no App",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthModel"
                }
              }
            }
          }
        }
      }
    },
    "/assinante": {
      "post": {
        "tags": [
          "Assinante"
        ],
        "summary": "Informações da assinatura",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AssinanteModel"
                }
              }
            }
          }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "tags": [
          "Autenticação"
        ],
        "summary": "Atualizar a sessão",
        "operationId": "authRefresh",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "description": "Enviar o token_refresh",
            "schema": {
              "type": "string",
              "example": "1as6d8a4sd8as4d64as8d4as3d48a6s4dasd86a7sd54as6d8a4s"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthModel"
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "Autenticação"
        ],
        "summary": "Encerrar sessão",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "description": "Enviar o access_token",
            "schema": {
              "type": "string",
              "example": "a9s87da87sd89a7sd7a89s7da89s7d0897as89da0s987"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponseModel"
                },
                "example": {
                  "message": "Dispositivo ativado com sucesso"
                }
              }
            }
          }
        }
      }
    },
    "/funcionario": {
      "get": {
        "tags": [
          "Funcionário"
        ],
        "summary": "Retorna os dados do usuário logado",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "description": "Enviar o access_token",
            "schema": {
              "type": "string",
              "example": "a9s87da87sd89a7sd7a89s7da89s7d0897as89da0s987"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FuncionarioModel"
