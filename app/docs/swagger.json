                "examples": {
                  "funcionario": {
                    "$ref": "#/components/examples/funcionario"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/inventario": {
      "get": {
        "tags": [
          "Inventário"
        ],
        "summary": "Lista todos os inventários abertos das lojas que o usuário possui acesso",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
